<%= form_for picture, multipart: true, :html => {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :name, class:"control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class:"form-control", id:"name" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :picture, class:"control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.file_field :picture, accept:"image/jpeg, image/gif, image/png", class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
<% end %>
